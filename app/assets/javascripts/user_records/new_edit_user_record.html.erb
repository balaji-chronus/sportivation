<div class="aside right am-slide-right no-gutter col-lg-6 col-md-12" tabindex="-1" role="dialog">
  <div class="aside-dialog">
    <div class="aside-content">
      <div class="aside-header bg-success clearfix">
        <button type="button" class="close" ng-click="$hide()">Ã—</button>
        <h4 class="aside-title text-clear">{{recordData.operation.capitalize()}} Acheivement</h4>
      </div>
      <div class="aside-body">
        <div class="form-group">
          <h4 class="clearfix"><label class='label pull-left text-primary no-gutter control-label'>Title</label></h4>
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-trophy"></i></span>
            <input type="text" class="form-control" ng-required="true" placeholder="Ex:- Olympic Record for 100m Sprint; Cricket World Cup Winner" ng-model="user_record.title">
          </div>
        </div>

        <div class="form-group">
          <h4 class="clearfix"><label class='label pull-left text-primary no-gutter control-label'>Description</label></h4>
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-lightbulb-o"></i></span>
            <textarea class="form-control" rows="3" id="summary" placeholder="Describe the performances associated with the acheivement" ng-model="user_tournament.description"></textarea>
          </div>
        </div>

        <div class="form-group">
          <h4 class="clearfix"><label class='label pull-left text-primary no-gutter control-label'>Date</label></h4>
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
            <input type="text" class="form-control" ng-required="true" data-date-format="MMM dd, yyyy" data-placement="top-left" placeholder="Acheivement Date" autoclose="1" ng-model="user_record.record_date" bs-datepicker>
          </div>
        </div>
      </div>
      <div class="aside-footer">
        <button type="button" class="btn btn-default" ng-click="$hide();">
          Close
        </button>
        <button type="button" class="btn btn-primary" ng-click="$hide()">
          Save Acheivement
        </button>
      </div>
    </div>
  </div>
</div>
