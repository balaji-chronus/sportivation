<div class="container top-buffer">
  <fieldset>
    <div class="col-lg-6">
      <div class="form-group">
        <label class='control-label'>Display Name</label>
        <div class="input-group required-field-block">
          <span class="input-group-addon"><i class="fa fa-font"></i></span>
          <input type="text" class="form-control" ng-required="true" placeholder="Choose a display name" ng-model="userData.displayname">
        </div>
      </div>

      <div class="form-group">
        <label class='control-label'>Full Name</label>
        <div class="input-group">
          <span class="input-group-addon"><i class="fa fa-bold"></i></span>
          <input type="text" class="form-control" ng-required="true" placeholder="Your Full name" ng-model="userData.fullname">
        </div>
      </div>

      <div class="form-group">
        <label class='control-label'>Address</label>
        <div class="input-group required-field-block">
          <span class="input-group-addon"><i class="fa fa-map-marker"></i></span>
          <input type="text" class="form-control" ng-required="true" placeholder="Enter an address, pincode or a city" ng-model="userData.address" data-animation="am-flip-x" bs-options="address.formatted_address as address.formatted_address for address in getAddress($viewValue)" bs-typeahead>
        </div>
      </div>
    </div>
    <div class="col-lg-6">

      <div class="form-group">
        <label class='control-label'>Gender <span class="text-danger">*</span></label>
        <div class="input-group btn-group" ng-model="userData.gender" bs-radio-group>
          <label class="btn btn-default" title="Male" data-placement="bottom" bs-tooltip><input type="radio" class="btn btn-default" value="male"> <i class="fa fa-male"></i></label>
          <label class="btn btn-default" title="Female" data-placement="bottom" bs-tooltip><input type="radio" class="btn btn-default" value="female"> <i class="fa fa-female"></i></label>
          <label class="btn btn-default" title="Transgender" data-placement="bottom" bs-tooltip><input type="radio" class="btn btn-default" value="transgender"> <i class="fa fa-transgender"></i></label>
        </div>
      </div>

      <div class="form-group">
        <label class='control-label'>Date of Birth</label>
        <div class="input-group required-field-block">
          <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
          <input type="text" class="form-control" ng-required="true" data-date-format="mediumDate" placeholder="click to open a calendar" autoclose="1" ng-model="userData.dob" bs-datepicker>
        </div>
      </div>

      <div class="form-group">
        <label class='control-label'>Contact Phone</label>
        <div class="input-group required-field-block">
          <span class="input-group-addon"><i class="fa fa-phone"></i></span>
          <input type="text" class="form-control" ng-required="true" placeholder="Your contact phone with Area code" ng-model="userData.contactphone">
        </div>
      </div>
    </div>

    <div class="col-xs-12 form-group">
      <label class='control-label'>Personal Summary</label>
      <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-info"></i></span>
        <textarea class="form-control" rows="3" id="textArea" ng-model="userData.summary" placeholder="A summary about yourself that the other users will see"></textarea>
      </div>

      <div class="form-group top-buffer-md pull-right">
        <a class="btn btn-default" title="Skip" bs-tooltip>
          skip
        </a>
        <a class="btn btn-success">
          save
        </a>
        <a ui-sref="form.interests" class="btn btn-info">
          Next
        </a>
      </div>
    </div>

    <pre>
      {{userData}}
    </pre>

  </fieldset>
</div>
