<div class="top-buffer-md">
  <fieldset>
    <div class="bpanel-box no-border no-shadow col-lg-6 col-md-12">
      <div class="bpanel-title vertical-gutter horizontal-gutter-l clearfix">
          Personal Info
      </div>
      <div class="bpanel-content">
        <div class="form-group">
          <h4><label class='label text-primary no-gutter control-label'>Display Name</label></h4>
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-user"></i></span>
            <input type="text" class="form-control" ng-required="true" placeholder="Choose a display name" ng-model="user.displayname">
          </div>
        </div>

        <div class="form-group">
          <h4><label class='label text-primary no-gutter control-label'>Full Name</label></h4>
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-user"></i></span>
            <input type="text" class="form-control" ng-required="true" placeholder="Your Full name" ng-model="user.name">
          </div>
        </div>

        <div class="form-group">
          <h4><label class='label text-primary no-gutter control-label'>Gender</label></h4>
          <div class="input-group btn-group" data-ng-model="user.gender" bs-radio-group>
            <label class="btn btn-default-light" title="Male" data-placement="bottom" bs-tooltip><input type="radio" name="user.gender" class="btn btn-default-light" value="male"> <i class="fa fa-male"></i></label>
            <label class="btn btn-default-light" title="Female" data-placement="bottom" bs-tooltip><input type="radio" name="user.gender" class="btn btn-default-light" value="female"> <i class="fa fa-female"></i></label>
            <label class="btn btn-default-light" title="Transgender" data-placement="bottom" bs-tooltip><input type="radio" name="user.gender" class="btn btn-default-light" value="transgender"> <i class="fa fa-transgender"></i></label>
          </div>
        </div>
      </div>
    </div>

    <div class="bpanel-box no-border no-shadow col-lg-6 col-md-12">
      <div class="bpanel-title vertical-gutter horizontal-gutter-l clearfix">
          Demographics
      </div>
      <div class="bpanel-content">
        <div class="form-group">
          <h4><label class='label text-primary no-gutter control-label'>Date of Birth</label></h4>
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
            <input type="text" class="form-control" ng-required="true" data-date-format="mediumDate" placeholder="click to open a calendar" autoclose="1" ng-model="user.dob" bs-datepicker>
          </div>
        </div>

        <div class="form-group">
          <h4><label class='label text-primary no-gutter control-label'>Address</label></h4>
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-map-marker"></i></span>
            <input type="text" class="form-control" ng-required="true" placeholder="Enter an address, pincode or a city" ng-model="user.address" ng-value="user.address" data-animation="am-flip-x" bs-options="address.formatted_address as address.formatted_address for address in getAddress($viewValue)" bs-typeahead>
          </div>
        </div>

        <div class="form-group">
          <h4><label class='label text-primary no-gutter control-label'>Contact Phone</label></h4>
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-phone"></i></span>
            <input type="text" class="form-control" ng-required="true" placeholder="Your contact phone with Area code" ng-model="user.contactphone">
          </div>
        </div>
      </div>
    </div>

    <div class="bpanel-box col-xs-12 form-group">
      <div class="bpanel-title vertical-gutter horizontal-gutter-xl clearfix">
        <h4 class="no-buffer"><label class='label text-primary no-gutter control-label'>Personal Summary</label></h4>
      </div>
      <div class="bpanel-content no-gutter">
        <div class="input-group">
          <span class="input-group-addon"><i class="fa fa-info"></i></span>
          <textarea class="form-control" rows="3" id="textArea" ng-model="user.summary" placeholder="A summary about yourself that the other users will see"></textarea>
        </div>
      </div>
    </div>


    <div class="form-group pull-right">
      <a class="btn btn-warning" title="Skip" bs-tooltip>
        Skip
      </a>
      <a class="btn btn-info" ng-click="updateProfile(user)">
        Save
      </a>
      <a ui-sref="form.interests" class="btn btn-success">
        Next
      </a>
    </div>

  </fieldset>
</div>
