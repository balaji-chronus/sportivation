<div class="modal" id="RegisterModal" tabindex="-1" role="dialog" aria-labelledby="RegisterModalLabel">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title">Getting Started</h3>
      </div>
      <div class="modal-body" ng-controller="AuthCtrl">
      <form ng-submit="register()" class="form-horizontal">
        <div class="login_register">
          <div class="register-form">
              <fieldset>
                <legend></legend>
                <div class="form-group">
                  <input type="text" class="form-control" placeholder="Your email" ng-model="user.email">
                </div>
                <div class="form-group">
                  <input type="text" class="form-control" placeholder="Pick a Username" ng-model="user.username">
                </div>
                <div class="form-group">
                  <input type="password" class="form-control" placeholder="Password" ng-model="user.password">
                </div>
                <p class="text-muted"><small>By clicking Signup, you agree to our terms of service and privacy policy. We will send you account related emails occasionally.</small></p>
                <div>
                  <input type="submit" class="btn btn-success pull-right" ng-click="$hide()" value="Signup">
                  <button type="button" class="btn btn-default pull-right right-buffer-sm" ng-click="$hide()">Cancel</button>
                </div>
              </fieldset>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
