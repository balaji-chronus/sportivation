<div class="aside right am-slide-right no-gutter col-lg-6 col-md-12" tabindex="-1" role="dialog">
  <div class="aside-dialog">
    <div class="aside-content">
      <div class="aside-header bg-success clearfix">
        <button type="button" class="close" ng-click="$hide()">Ã—</button>
        <h4 class="aside-title text-clear">{{eventData.operation.capitalize()}} Event</h4>
      </div>
      <div class="aside-body">
        <div class="form-group">
          <h4 class="clearfix"><label class='label pull-left text-primary no-gutter control-label'>Event Name</label></h4>
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-user"></i></span>
            <input type="text" class="form-control" ng-required="true" placeholder="Name of the event" ng-model="user_tournament.name">
          </div>
        </div>

        <div class="form-group">
          <h4 class="clearfix"><label class='label pull-left text-primary no-gutter control-label'>Summary</label></h4>
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-user"></i></span>
            <textarea class="form-control" rows="3" id="summary" placeholder="Describe your role, position & style/memories/overall position etc..." ng-model="user_tournament.summary"></textarea>
          </div>
        </div>

        <div class="form-group">
          <h4 class="clearfix"><label class='label pull-left text-primary no-gutter control-label'>Represented</label></h4>
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-flag"></i></span>
            <input type="text" class="form-control" ng-required="true" placeholder="country/state/college/school/club/self represented" ng-model="user_tournament.team">
          </div>
        </div>

        <div class="form-group">
          <h4 class="clearfix"><label class='label pull-left text-primary no-gutter control-label'>Location</label></h4>
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-map-marker"></i></span>
            <input type="text" class="form-control" ng-required="true" placeholder="Enter a city, state, country" ng-model="user_tournament.location" data-animation="am-flip-x" bs-options="address.formatted_address as address.formatted_address for address in getAddress($viewValue)" bs-typeahead>
          </div>
        </div>

        <div class="form-group">
          <h4 class="clearfix"><label class='label pull-left text-primary no-gutter control-label'>Date</label></h4>
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
            <input type="text" class="form-control" ng-required="true" data-date-format="MMM, yyyy" data-placement="top-left" data-min-view="1" placeholder="Month and Year of the Event" autoclose="1" ng-model="user_tournament.tournament_date" bs-datepicker>
          </div>
        </div>
      </div>
      <div class="aside-footer">
        <button type="button" class="btn btn-default" ng-click="$hide();">
          Close
        </button>
        <button type="button" class="btn btn-primary" ng-click="createUpdateEvent(eventData.operation); $hide()">
          Save Event
        </button>
      </div>
    </div>
  </div>
</div>
