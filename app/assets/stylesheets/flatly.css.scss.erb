/* App Styles */

.navbar-brand {
  padding: 15px !important;
}

.navbar-default {
  padding: 0 !important;
  box-shadow: 0 0 4px rgba(0,0,0,.14),0 4px 8px rgba(0,0,0,.28);
}

.register-button{
  height: 9%; /* Set your own height: percents, ems, whatever! */
  width: 25%; /* Set your own width: percents, ems, whatever! */
  overflow: auto; /* Recommended in case content is larger than the container */
  margin: auto; /* Center the item vertically & horizontally */
  position: absolute; /* Break it out of the regular flow */
  top: 75%; left: 0; bottom: 0; right: 0; /* Set the bounds in which to center it, relative to its parent/container */
}

.navy-line{
  width:60px;
  height:1px;
  margin: 30px auto 0;
  border-bottom:2px solid #111;
}

/* */

.navbar.navbar-fixed-top {
  background: #111;
}

/* Carousel - Start */
#myCarousel {
  background-image: url("<%= asset_url('header-bg.jpg') %>");
}

#myCarousel .jumbotron {
  background: transparent;
}

.carousel-inner{
    min-height: 500px !important;
}

/* Carousel - End */

/* Services Section - Start */

.team{
  margin-top:60px;
}

.services h2{
  font-size:20px;
  letter-spacing: -1px;
  font-weight:600;
  text-transform:uppercase;
}

.features h2{
  font-size:18px;
  margin-top:5px;
}

/* Services Section - End */

.contact {
    background-color: #111;
    background-image: url("<%= asset_url('map-image.png') %>");
    background-position:40% 0%;
    background-repeat: no-repeat;
}

div.list-group{
  margin-bottom: 0;
}