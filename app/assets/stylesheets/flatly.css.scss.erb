/* App Styles */
.navbar-brand {
  padding: 15px !important;
}

.navbar-default {
  padding: 0 !important;
}

.flash_message {
  position: absolute;
  text-shadow: 0 1px 0 rgba(0,0,0,.5);
  z-index: 1040;
  width: 100%;
  height: 0px;
  margin-bottom: 0px;

  span.alert-message{
    color: #000;
  }
}

.register-button{
  position:absolute;
  top: 300px;
  left: 46%;
}

.flash_message.alert.in{
  height: 75px;

  span.alert-message{
    color: #FFF;
    line-height: 40px;
  }
}

.vcenter {
  display: inline-block;
  vertical-align: middle;
  float: none;
}

.top-buffer { margin-top: 20px; }
.top-buffer-md { margin-top: 15px; }
.top-buffer-sm { margin-top: 7px; }
.top-buffer-xs { margin-top: 5px; }

.left-buffer { margin-left: 20px; }
.left-buffer-md { margin-left: 15px; }
.left-buffer-sm { margin-left: 7px; }
.left-buffer-xs { margin-left: 5px; }

.text-clear{
  color:#FFFFFF !important;
}

.navy-link{
  text-decoration:none !important;
}

.navy-line{
  width:60px;
  height:1px;
  margin:30px auto 0;
  border-bottom:2px solid #2c3e50;
}


section p{
  font-size:13px;
}

/* Landing Page */

.navbar.navbar-fixed-top {
  background: #000;
}

/* Carousel - Start */
#myCarousel {
  background-image: url("<%= asset_url('header-bg.jpg') %>");
}

#myCarousel .jumbotron {
  background: transparent;
}

.form-horizontal .form-group
{
  margin-left: 0px !important;
  margin-right: 0px !important;
}

.container-content {
  padding-top:60px;
}

.clear-both{
  clear:both;
}

.carousel-inner{
    min-height: 500px !important;
}

.icheckbox_square-green{
  position:relative;
  display: inline-block;
  vertical-align:middle;
  padding: 0px;
  width: 22px;
  height: 22px;
  border: none;
  cursor: pointer;
}
/* Carousel - End */

/* Services Section - Start */

.team{
  margin-top:60px;
}

.services h2{
  font-size:20px;
  letter-spacing: -1px;
  font-weight:600;
  text-transform:uppercase;
}

.features h2{
  font-size:18px;
  margin-top:5px;
}

/* Services Section - End */

/*Team Member Section - Start */

.gray-section{
  background:#f4f4f4;
  margin-top:30px;
}

/* Team Member Section - End */

.contact {
    background-color: #222;
    background-image: url("<%= asset_url('map-image.png') %>");
    background-position:40% 0%;
    background-repeat: no-repeat;
}
