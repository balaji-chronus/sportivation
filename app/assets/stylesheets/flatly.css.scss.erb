/* App Styles */

.rounded {
    -webkit-border-radius: 5px;
    border-radius: 5px;
}

.navbar-brand {
  padding: 15px !important;
}

.navbar-default {
  padding: 0 !important;
}

.flash_message {
  position: absolute;
  text-shadow: 0 1px 0 rgba(0,0,0,.5);
  z-index: 1040;
  width: 100%;
  height: 0px;
  margin-bottom: 0px;
  border-radius: 0px;
  display: none;

  span.alert-message{
    color: #000;
  }

  &.alert {
    display: block;

    &.in {
      height: 60px;

      span.alert-message{
        color: #FFF;
      }
    }
  }
}

.register-button{
  height: 9%; /* Set your own height: percents, ems, whatever! */
  width: 25%; /* Set your own width: percents, ems, whatever! */
  overflow: auto; /* Recommended in case content is larger than the container */
  margin: auto; /* Center the item vertically & horizontally */
  position: absolute; /* Break it out of the regular flow */
  top: 75%; left: 0; bottom: 0; right: 0; /* Set the bounds in which to center it, relative to its parent/container */
}

.vcenter {
  display: inline-block;
  vertical-align: middle;
  float: none;
}

.top-buffer { margin-top: 20px; }
.top-buffer-md { margin-top: 15px; }
.top-buffer-sm { margin-top: 7px; }
.top-buffer-xs { margin-top: 5px; }

.left-buffer { margin-left: 20px !important; }
.left-buffer-md { margin-left: 15px !important; }
.left-buffer-sm { margin-left: 7px !important; }
.left-buffer-xs { margin-left: 5px !important; }

.right-buffer { margin-right: 20px !important; }
.right-buffer-md { margin-right: 15px !important; }
.right-buffer-sm { margin-right: 7px !important; }
.right-buffer-xs { margin-right: 5px !important; }

.vertical_gutter {
  padding-top: 10px;
  padding-bottom: 10px;
  padding-left: 0 !important;
  padding-right: 0 !important;
}

.horizontal_gutter {
  padding-top: 0px !important;
  padding-bottom: 0px !important;
