/* App Styles */
.top-buffer { margin-top:20px; }

.text-clear{
  color:#FFFFFF !important;
}

.navy-link{
  text-decoration:none !important;
}

.navy-line{
  width:60px;
  height:1px;
  margin:60px auto 0;
  border-bottom:2px solid #2c3e50;
}


section p{
  font-size:13px;
}

ul.socialbuttons li a{
  display:block;
  width:40px;
  height:40px;
  border-radius:100%;
  font-size:20px;
  line-height:40px;
  outline:0;
  background-color:#222;
  transition:all .3s;
}

footer {
    padding: 25px 0;
    text-align: center;
}

footer span.copyright {
    text-transform: uppercase;
    text-transform: none;
    font-family: Montserrat,"Helvetica Neue",Helvetica,Arial,sans-serif;
    line-height: 40px;
}

footer ul.quicklinks {
    margin-bottom: 0;
    text-transform: uppercase;
    text-transform: none;
    font-family: Montserrat,"Helvetica Neue",Helvetica,Arial,sans-serif;
    line-height: 40px;
}

ul.social-buttons li a:hover,
ul.social-buttons li a:focus,
ul.social-buttons li a:active {
    background-color: #fed136;
}



/* Landing Page */

.navbar.navbar-fixed-top {
  background: #000;
}

/* Carousel - Start */
#myCarousel {
  background-image: url("<%= asset_url('header-bg.jpg') %>");
}

#myCarousel .jumbotron {
  background: transparent;
}

.form-horizontal .form-group
{
  margin-left: 0px !important;
  margin-right: 0px !important;
}

.container-content {
  padding-top:60px;
}

.clear-both{
  clear:both;
}

.carousel-inner{
    min-height: 400px !important;
}

.icheckbox_square-green{
  position:relative;
  display: inline-block;
  vertical-align:middle;
  padding: 0px;
  width: 22px;
  height: 22px;
  border: none;
  cursor: pointer;
}
/* Carousel - End */

/* Services Section - Start */
.services{
  padding-top:60px;
}

.services h2{
  font-size:20px;
  letter-spacing: -1px;
  font-weight:600;
  text-transform:uppercase;
}

.features h2{
  font-size:18px;
  margin-top:5px;
}

/* Services Section - End */

/*Team Member Section - Start */

.team-member{
  text-align:center;
}

.gray-section{
  background:#f4f4f4;
  margin-top:60px;
}

.team-member img{
  display:inline;
  max-width:100%;
  height:auto;
}
/* Team Member Section - End */

/*Contact Section- Start */
.contact{
  background-image:url('http://www.castellohomes.com/pages/world-map1.png');
  background-position:40% 0%;
  background-repeat:no-repeat;
  margin-top:60px;
}
/* Contact Section- End */

/* Features Section - Start */
.features-text{
  margin-top:40px;
}
/* Features Section - End */
