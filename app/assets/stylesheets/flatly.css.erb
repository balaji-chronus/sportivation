/* App Styles */
.top-buffer { margin-top:20px; }

.text-clear{
  color:#FFFFFF !important;
}

.navy-link{
  text-decoration:none !important;
}

.navy-line{
  width:60px;
  height:1px;
  margin:30px auto 0;
  border-bottom:2px solid #2c3e50;
}


section p{
  font-size:13px;
}

/* Landing Page */

.navbar.navbar-fixed-top {
  background: #000;
}

/* Carousel - Start */
#myCarousel {
  background-image: url("<%= asset_url('header-bg.jpg') %>");
}

#myCarousel .jumbotron {
  background: transparent;
}

.form-horizontal .form-group
{
  margin-left: 0px !important;
  margin-right: 0px !important;
}

.container-content {
  padding-top:60px;
}

.clear-both{
  clear:both;
}

.carousel-inner{
    min-height: 400px !important;
}

.icheckbox_square-green{
  position:relative;
  display: inline-block;
  vertical-align:middle;
  padding: 0px;
  width: 22px;
  height: 22px;
  border: none;
  cursor: pointer;
}
/* Carousel - End */

/* Services Section - Start */

.services h2{
  font-size:20px;
  letter-spacing: -1px;
  font-weight:600;
  text-transform:uppercase;
}

.features h2{
  font-size:18px;
  margin-top:5px;
}

/* Services Section - End */

/*Team Member Section - Start */

.gray-section{
  background:#f4f4f4;
  margin-top:30px;
}

/* Team Member Section - End */

.contact {
    background-color: #222;
    background-image: url("<%= asset_url('map-image.png') %>");
    background-position:40% 0%;
    background-repeat: no-repeat;
}
